<IfModule mod_mime.c>
  AddType image/avif .avif
  AddType image/avif-sequence .avifs
  AddType image/webp .webp
  AddType font/woff2 .woff2
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"

    # HTML/JSON - brak cache dla danych dynamicznych
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"

    # MEDIA - 1 rok (wymóg PageSpeed)
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # FONTS - 1 rok
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # CSS/JS - 1 rok
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
    # Wymuszenie Cache-Control dla plików statycznych
    <FilesMatch "\.(avif|webp|png|jpg|jpeg|ico|woff2|css|js|svg)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
        Header unset ETag
        FileETag None
    </FilesMatch>

    # Poprawne cache'owanie wersji skompresowanych
    Header append Vary Accept-Encoding
</IfModule>

# Standardowa logika Laravel
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
